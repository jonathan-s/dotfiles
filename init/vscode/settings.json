{
    "files.trimTrailingWhitespace": true,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/*.pyc": true,
        "**/node_modules/": true,
        "**/__pycache__": true
    },
    "files.insertFinalNewline": true,
    "editor.renderWhitespace": "all",
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.snippetSuggestions": "top",
    "editor.rulers": [
        80,
        100
    ],
    "editor.fontSize": 12,
    "editor.tabSize": 4,
    "editor.formatOnType": false,
    "editor.formatOnPaste": false,
    "editor.formatOnSave": false,
    "colorize.colorized_variables": [
        "CSS",
        "SASS"
    ],
    "editor.renderControlCharacters": true,
    "editor.wordWrapColumn": 80,
    "[markdown]": {
        "editor.wordWrap": "wordWrapColumn",
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        }
    },
    "[asciidoc]": {
        "editor.wordWrap": "wordWrapColumn",
    },
    "workbench.editor.showTabs": "single",
    "workbench.colorTheme": "Brogrammer",
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features",
        "editor.tabSize": 2
    },
    "editor.suggestSelection": "recentlyUsedByPrefix",
    "[javascript]": {
        "editor.tabSize": 2,
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[scss]": {
        "editor.tabSize": 2,
    },
    "[xml]": {
        "editor.tabSize": 2
    },
    "[html]": {
        "editor.tabSize": 2,
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "[yaml]": {
        "editor.tabSize": 2
    },
    "[python]": {
        "editor.tabSize": 4
    },
    "files.associations": {
        "*.css": "postcss",
        "*.adoc": "markdown"
    },
    "python.languageServer": "Jedi",
    "python.analysis.autoImportCompletions": false,
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "security.workspace.trust.untrustedFiles": "open",
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "editor.bracketPairColorization.enabled": true,
    "editor.definitionLinkOpensInPeek": true,
    "flake8.args": [
        "--ignore=E501,W503"
    ],
    "editor.indentSize": "tabSize",
    "advancedNewFile.exclude": {
        "target": true,
        "venv": true
    },
    "rust-analyzer.semanticHighlighting.operator.specialization.enable": true,
    "rust-analyzer.semanticHighlighting.punctuation.enable": true,
    "rust-analyzer.semanticHighlighting.punctuation.separate.macro.bang": true,
    "rust-analyzer.semanticHighlighting.punctuation.specialization.enable": true,
    "editor.inlayHints.enabled": "offUnlessPressed",
    "editor.tabCompletion": "on",
    "search.exclude": {
        "**/target": true
    },
    "terminal.integrated.defaultProfile.osx": "zsh",
}
